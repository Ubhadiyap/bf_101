<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg5"
    >

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Quiz"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/list_selector" >

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="1) Question"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:background="#90ff5f"
            android:text="Next"
            android:onClick="next"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/question"
            android:layout_below="@+id/question"
            android:layout_marginTop="20dp"
            android:text="Answer 1"
            android:textColor="@color/text_color" />

        <RadioButton
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/answer1"
            android:layout_below="@+id/answer1"
            android:layout_marginTop="10dp"
            android:text="Answer 2"
            android:textColor="@color/text_color" />

        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/answer3"
            android:layout_below="@+id/answer3"
            android:layout_marginTop="10dp"
            android:text="Answer 4"
            android:textColor="@color/text_color" />

        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/answer2"
            android:layout_below="@+id/answer2"
            android:layout_marginTop="10dp"
            android:text="Answer 3"
            android:textColor="@color/text_color" />

    </RelativeLayout>

</RelativeLayout>
